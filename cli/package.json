{
  "name": "@diskcare/cli",
  "version": "1.0.1",
  "private": false,
  "type": "module",
  "bin": {
    "diskcare": "dist/index.js"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "!dist/**/__tests__"
  ],
  "keywords": [
    "disk-cleanup",
    "cache",
    "temp-files",
    "cli",
    "safe"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true});\"",
    "build": "npm run clean && tsc -p tsconfig.json && node ./scripts/add-shebang.cjs",
    "dev": "node --enable-source-maps dist/index.js --help",
    "lint": "eslint .",
    "test": "npm run build && node --test dist/**/__tests__/**/*.test.js"
  },
  "dependencies": {
    "@diskcare/rules-engine": "1.0.1",
    "@diskcare/scanner-core": "1.0.1",
    "@diskcare/shared-utils": "1.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "trash": "^10.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.10.0",
    "fast-check": "^3.23.2",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "description": "Safe, explainable, rule-based disk cleanup CLI.",
  "author": "DiskCare Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diskcare/diskcare.git"
  },
  "homepage": "https://github.com/diskcare/diskcare",
  "bugs": {
    "url": "https://github.com/diskcare/diskcare/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
